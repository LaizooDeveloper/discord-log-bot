<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log Control Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <a class="navbar-brand" href="/">Log Control Panel</a>
  </div>
</nav>

<div class="container">
    <h2 class="mb-4">Add New Server</h2>
    <form action="/add-server" method="POST" class="mb-5">
        <div class="input-group">
            <input type="text" name="guildId" class="form-control" placeholder="Enter Server ID" required>
            <button type="submit" class="btn btn-success">Add Server</button>
        </div>
    </form>

    <h2 class="mb-4">Servers</h2>
    <div class="row">
        <% servers.forEach(server => { %>
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Server ID: <%= server.guildId %></h5>
                        <p class="card-text">You can edit the log settings for this server.</p>
                        <a href="/edit/<%= server.guildId %>" class="btn btn-primary w-100">Edit</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
